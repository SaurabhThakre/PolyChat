<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chatapp.Register"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:typeface="monospace"
        android:textStyle="bold|italic"/>

    <EditText
        android:layout_marginTop="120dp"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_box_height"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:hint="Username"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        android:backgroundTint="@color/inputTextBackgroundColor"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_box_height"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:maxLines="1"
        android:backgroundTint="@color/inputTextBackgroundColor"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:backgroundTint="@color/loginBackground"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click_here_to_login"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/clicklogin"
        android:typeface="monospace"
        android:textStyle="bold|italic"/>

</LinearLayout>